<section class="schedule bg-rose-100 pb-16">
  <div class="container mx-auto pt-4 pb-8 px-8 lg:px-4">

    <div class="relative mx-auto w-7xl rounded-lg bg-white [box-shadow:0_40px_0_0_#CC7996,0_15px_0_0_#CC7996] border-4 border-rose-800">
      <div class="p-8">
        <h3 class="text-center font-bold text-2xl text-rose-800">
          Featured Speakers
        </h3>
        <div class="flex flex-wrap mt-8 pb-8 md:flex-row flex-col">
          {% for speaker in site.data.speakers %}
            <div class="mt-4 flex w-full md:w-1/2 md:flex-row flex-col items-start">
              <img
                src="{{ speaker.image }}"
                class="rounded-xl border-4 border-rose-400 h-24 w-24 flex-shrink-0 hover:-translate-y-2 transition-transform"
                alt="{{ speaker.name }}">
              <div class="px-4 flex flex-col justify-start max-sm:items-center">
                <h3 class="text-xl text-neutral-800 font-semibold">
                  {{ speaker.talk }}
                </h3>
                <p class="font-bold text-rose-800 flex flex-row items-center justity-start gap-x-2">
                  <span class="inline-block">{{ speaker.display_name }}</span>
                  {% if speaker.github %}
                    <a
                      href="https://github.com/{{ speaker.github }}"
                      target="_blank"
                      class="block">
                      {% svg "/assets/icons/github.svg" class="h-4 w-4 fill-rose-800" %}
                    </a>
                  {% endif %}
                </p>
                <p class="text-neutral-800">
                  {{ speaker.title }}
                </p>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>